<h1 class="text-center mt-3"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<div class="text-center mt-3">
  <% if logged_in? && @user == current_user %>
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
    <%= link_to "Delete your profile", user_path(current_user), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
  <% end %>
</div>

<h3 class="text-center mt-3">Articles</h3>

<div class="apple_pagination">
  <%= will_paginate @articles, :container => false %>
</div>


